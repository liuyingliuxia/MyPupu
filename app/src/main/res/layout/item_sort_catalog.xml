<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/color8"
    android:layout_width="@dimen/mmm_font_s90"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/llCatalog1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivVerCutLine"
            android:layout_width="@dimen/mmm_font_s4"
            android:layout_height="@dimen/mmm_font_s20"
            android:layout_gravity="center_vertical"
            android:background="@color/color23"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tvCatalog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:button="@null"
            android:gravity="center"
            android:paddingTop="@dimen/mmm_font_s16"
            android:paddingBottom="@dimen/mmm_font_s16"
            android:text="@string/mmm_hotpot_festival"
            android:textColor="@drawable/state_selected_c3_c23"
            android:textSize="@dimen/mmm_font_s12" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llCatalog2"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivVerCutLine2"
            android:layout_width="@dimen/mmm_font_s4"
            android:layout_height="@dimen/mmm_font_s20"
            android:layout_gravity="center_vertical"
            android:background="@color/color23"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tvCatalog2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:button="@null"
            android:gravity="center"
            android:paddingTop="@dimen/mmm_font_s16"
            android:paddingBottom="@dimen/mmm_font_s16"
            android:text="@string/mmm_fruit"
            android:textColor="@drawable/state_selected_c3_c23"
            android:textSize="@dimen/mmm_font_s12" />

    </LinearLayout>

</LinearLayout>