                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llFruitSort10"
                    android:orientation="vertical"
                    android:tag="@string/mmm_fruit_sort10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/fruit_sort_width"
                        android:layout_height="@dimen/fruit_sort_height"
                        android:padding="@dimen/fruit_sort_padding"
                        android:src="@drawable/fruit_sort10"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="@dimen/fruit_sort_width"
                        android:text="@string/mmm_fruit_sort10"
                        android:textColor="@color/color3"
                        android:layout_marginTop="@dimen/mmm_fruit_margin_top"
                        android:textSize="@dimen/mmm_font_fruit"
                        android:gravity="center" />

                </LinearLayout>


            </GridLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/mmm_font_s10"
                android:layout_marginTop="@dimen/mmm_font_s10"
                android:background="@color/color8" />

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <include
        layout="@layout/item_filter"/>

</com.google.android.material.appbar.AppBarLayout>