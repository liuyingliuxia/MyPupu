<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tlMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/mmm_font_s6">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

            <TextView
                android:id="@+id/tvRecommend"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingLeft="@dimen/mmm_font_s10"
                android:paddingRight="@dimen/mmm_font_s10"
                android:textColor="@color/color23"
                android:gravity="center"
                android:text="@string/mmm_recommend"/>

                <View
                    android:layout_width="70dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/color23"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvFlash"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/mmm_font_s10"
                    android:paddingRight="@dimen/mmm_font_s10"
                    android:textColor="@color/color3"
                    android:gravity="center"
                    android:text="@string/mmm_flash"/>

                <View
                    android:visibility="invisible"
                    android:layout_width="70dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/color23"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvCrazy"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/mmm_font_s10"
                    android:paddingRight="@dimen/mmm_font_s10"
                    android:textColor="@color/color3"
                    android:gravity="center"
                    android:text="@string/mmm_crazy"/>

                <View
                    android:layout_width="70dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:visibility="invisible"
                    android:background="@color/color23"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvFruit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/mmm_font_s10"
                    android:paddingRight="@dimen/mmm_font_s10"
                    android:textColor="@color/color3"
                    android:gravity="center"
                    android:text="@string/mmm_fruit"/>

                <View
                    android:layout_width="70dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:visibility="invisible"
                    android:background="@color/color23"/>

            </LinearLayout>

        </LinearLayout>

</TableLayout>
